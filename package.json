{
  "name": "data-dashboard",
  "version": "0.3.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "lib-start": "ng build @eclipse-edc/dashboard-core --watch",
    "build": "ng build",
    "lib-build": "ng build @eclipse-edc/dashboard-core",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lib-test": "ng test --project @eclipse-edc/dashboard-core",
    "lint": "ng lint",
    "prepare": "husky",
    "cypress:open": "ng run data-dashboard:cypress-open",
    "cypress:run:e2e": "npm run lib-build && ng run data-dashboard:cypress-run-e2e",
    "cypress:run:component": "npm run lib-build && ng run data-dashboard:cypress-run-component"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.2.5",
    "@angular/cdk": "^19.2.8",
    "@angular/common": "^19.2.5",
    "@angular/compiler": "^19.2.5",
    "@angular/core": "^19.2.5",
    "@angular/forms": "^19.2.5",
    "@angular/platform-browser": "^19.2.5",
    "@angular/platform-browser-dynamic": "^19.2.5",
    "@angular/router": "^19.2.5",
    "@think-it-labs/edc-connector-client": "0.8.0",
    "material-symbols": "^0.29.2",
    "mime": "^4.0.6",
    "ngx-float-ui": "^19.0.1",
    "rxjs": "~7.8.2",
    "tslib": "^2.8.1",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.6",
    "@angular-devkit/core": "^19.2.6",
    "@angular/cli": "^19.2.6",
    "@angular/compiler-cli": "^19.2.5",
    "@cypress/schematic": "^3.0.0",
    "@tailwindcss/postcss": "^4.1.1",
    "@types/jasmine": "~5.1.7",
    "angular-eslint": "19.3.0",
    "cypress": "^14.3.3",
    "daisyui": "^5.0.12",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "husky": "^9.1.7",
    "jasmine-core": "~5.6.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^15.5.0",
    "ng-packagr": "^19.2.1",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "tailwindcss": "^4.1.1",
    "typescript": "~5.8.2",
    "typescript-eslint": "8.29.0"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": "eslint --cache --fix",
    "projects/dashboard-core/**/*.{ts,js}": "eslint --cache --fix --config projects/dashboard-core/eslint.config.js",
    "src/**/*.{json,yml,yaml,html,css,js,ts}": "prettier --write",
    "projects/dashboard-core/**/*.{json,yml,yaml,html,css,js,ts}": "prettier --write"
  }
}
